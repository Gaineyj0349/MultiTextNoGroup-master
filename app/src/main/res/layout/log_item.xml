<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:orientation="vertical"
    android:id="@+id/logbg"
   >

    <LinearLayout
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.bitwis3.gaine.multitextnogroupPRO.CustomTextView
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textAlignment="center"
        android:id="@+id/log_item_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sent from auto text mode"/>
    <com.bitwis3.gaine.multitextnogroupPRO.CustomTextView
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:id="@+id/log_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Example Name"/>
    <com.bitwis3.gaine.multitextnogroupPRO.CustomTextView
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:id="@+id/log_item_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="999999999"/>
    <com.bitwis3.gaine.multitextnogroupPRO.CustomTextView
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:id="@+id/log_item_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="So this is the message body, what else is new?"/>
    <com.bitwis3.gaine.multitextnogroupPRO.CustomTextView
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:id="@+id/log_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12/12/1888"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/llLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <Button
            android:textColor="#ffffff"
            android:id="@+id/DeleteButtonLog"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="QUICK DELETE" />

        <Button
            android:id="@+id/SendButtonLog"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="SEND NOW" />

    </LinearLayout>
    <View
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <View
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <View
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
